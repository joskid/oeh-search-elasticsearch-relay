{
  "name": "elasticsearch-relay",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist src/generated/*",
    "start": "concurrently npm:watch-*",
    "watch-tsoa": "nodemon --watch src --watch tsoa.json --ext ts --ignore src/generated --exec 'tsoa spec-and-routes'",
    "watch-graphql": "graphql-codegen -w",
    "watch-schema": "nodemon --watch src/graphql/schema.graphql --exec \"npm run copy-schema\"",
    "watch-tsc": "tsc-watch --noClear --onSuccess \"node dist/index.js\"",
    "generate": "concurrently \"tsoa spec-and-routes\" \"graphql-codegen\"",
    "prebuild": "npm run generate",
    "build": "concurrently \"tsc\" \"npm:copy-schema\"",
    "docker-build": "docker build --tag openeduhub/oeh-search-elasticsearch-relay:local .",
    "copy-schema": "cpx src/graphql/schema.graphql dist/graphql",
    "update-vocabs": "ts-node scripts/updateVocabs"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.8.0",
    "apollo-server-express": "^2.16.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "graphql-fields": "^2.0.3",
    "graphql-import": "^1.0.2",
    "graphql-tools": "^6.0.14",
    "swagger-ui-express": "^4.1.4",
    "tsoa": "^3.2.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.17.0",
    "@graphql-codegen/introspection": "^1.17.0",
    "@graphql-codegen/typescript": "^1.17.0",
    "@graphql-codegen/typescript-resolvers": "^1.17.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/graphql": "^14.5.0",
    "@types/graphql-fields": "^1.3.2",
    "@types/node": "^14.0.23",
    "@types/swagger-ui-express": "^4.1.2",
    "axios": "^0.19.2",
    "concurrently": "^5.2.0",
    "cpx": "^1.5.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "tsc-watch": "^4.2.9",
    "tslint": "^6.1.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,md,html,css,scss}": "prettier --write",
    "*.ts": "tslint --fix"
  }
}
