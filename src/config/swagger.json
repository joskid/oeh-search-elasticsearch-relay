{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api/v1"
        }
    ],
    "paths": {
        "/search": {
            "get": {
                "summary": "Search the ElasticSearch index",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad request"
                    }
                },
                "content": {
                    "application/json": {}
                },
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "description": "The search string",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "pageIndex",
                        "in": "query",
                        "description": "Results page, starting at 0",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "pageSize",
                        "in": "query",
                        "description": "Number of results per page, defaults to 10",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "filters",
                        "in": "query",
                        "description": "JSON representation of filters to narrow down the search",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ]
            }
        },
        "/details/{id}": {
            "get": {
                "summary": "Get the complete index entry",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad request"
                    }
                },
                "content": {
                    "application/json": {}
                },
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id in the elastic search index",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ]
            }
        },
        "/auto-complete": {
            "get": {
                "summary": "Get auto-complete suggestions",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad request"
                    }
                },
                "content": {
                    "application/json": {}
                },
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Query entered so far",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ]
            }
        }
    }
}
